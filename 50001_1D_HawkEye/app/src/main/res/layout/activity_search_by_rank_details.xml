<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientsearch"

    tools:context=".SearchByRankDetails">

    <TextView
        android:id="@+id/nameContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:text="Location:"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="391dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="391dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/numberContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="391dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/totalCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/totalCapacityContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="391dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/occupancyRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        android:textColor="@android:color/holo_blue_light"
        />

    <TextView
        android:id="@+id/occupancyRateContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="391dp"
        android:textColor="@android:color/white"
        />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="307dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/canteen" />
</LinearLayout>